---
// Import the necessary dependencies
import ReviewComponent from '@components/ui/blocks/ReviewComponent.astro'
import PrimaryCTA from '@components/ui/buttons/PrimaryCTA.astro'
import SecondaryCTA from '@components/ui/buttons/SecondaryCTA.astro'
import { Image } from 'astro:assets'
import Headline from '@images/headline.webp'

// Define props from Astro
const { withReview, avatars, starCount, rating, reviews, src, alt } =
  Astro.props

// Define TypeScript interface for props
interface Props {
  withReview?: boolean
  avatars?: Array<string>
  starCount?: number
  rating?: string
  reviews?: string
  src?: any
  alt?: string
}
---

<!-- Defining a grid container that holds all the content -->
<section
  class="relative mx-auto grid min-h-svh max-w-[85rem] gap-4 px-4 py-14 sm:px-6 md:grid-cols-[auto,auto] md:items-center md:gap-8 lg:px-8 2xl:max-w-full">
  <!-- Title and description -->

  <img
    class="absolute left-1/2 top-1/2 -z-10 h-svh w-screen max-w-none -translate-x-1/2 -translate-y-1/2 object-cover object-center brightness-50"
    src="/headline.webp"
    alt="hero image"
  />

  <div class="mt-[80px]" >
    <!-- Each h1 and p tag renders a portion of the title and subTitle defined above -->
    <h1
      class="block text-balance text-3xl font-bold tracking-tight text-neutral-200 dark:text-neutral-200 sm:text-4xl lg:text-6xl lg:leading-tight">
      Simplifying Complexity, <span
        class="text-desacode-700 dark:text-desacode-700">Enabling Growth</span
      >
    </h1>

    <p
      class="mt-3 text-pretty text-lg leading-relaxed text-neutral-200 dark:text-neutral-400 lg:w-4/5">
      Transform your business journey by simplifying complexities and unleashing
      unprecedented growth opportunities.
    </p>

    <!-- Action Button Section: This section includes two CTAs with their own styles and URL -->
    <div class="mt-7 grid w-full gap-3 sm:inline-flex">
      <PrimaryCTA title="Start Exploring" url="/services" />
      <SecondaryCTA title="Contact Sales Team" url="/contact" />
    </div>

    <!-- DARI SINI KE BAWAH ENGGA KEPAKE -->

    <!-- Review Section: This section presents avatars, review ratings and the number of reviews -->
    {
      withReview ? (
        <ReviewComponent
          avatars={avatars}
          starCount={starCount}
          rating={rating}
          reviews={reviews}
        />
      ) : (
        ''
      )
    }
  </div>

  <!-- Hero Image Section -->
  <!-- <div class="flex w-full">
    <div class="top-12 overflow-hidden">
      <Image
        src={Headline}
        alt={'headline'}
        class="h-full w-full scale-110 object-cover object-center"
        draggable={'false'}
        loading={'eager'}
        format={'avif'}
      />
    </div>
  </div> -->
</section>

